<Window xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d" Width = "300" Height = "400"
  x:Class="Nema.SettingsWindow"
  Title="SettingsWindow">
  <StackPanel>
    <TextBlock Background = "IndianRed">Settings do not work yet!</TextBlock>
    <TextBlock>Emulation settings</TextBlock>
    <CheckBox>Reset memory on restart</CheckBox>
    <CheckBox>Reset flags and register on restart</CheckBox>
    <StackPanel Orientation="Horizontal">
      <TextBlock>Read-Only-Memory size</TextBlock>
      <NumericUpDown Value="16" Increment="16" Minimum="0" Maximum="65535" />
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <TextBlock>Stack size</TextBlock>
      <NumericUpDown Value="16" Increment="16" Minimum="64" Maximum="1024" />
    </StackPanel>
  </StackPanel>
</Window>